<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/standard_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InternalStorageActivity">
    
    <TextView
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:text="@string/internal_storage_title"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <EditText
        android:id="@+id/internal_content_edittext"
        android:layout_marginTop="16dp"
        android:hint="@string/masukkan_teks_hint"
        android:minLines="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:text="@string/internal_storage_title"
            android:textSize="12sp"
            android:id="@+id/btn_internal_writetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <Button
            android:layout_margin="8dp"
            android:backgroundTint="@color/black"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:text="@string/read_title"
            android:id="@+id/btn_internal_read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>